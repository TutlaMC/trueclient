{
  "name": "trueclient",
  "version": "0.0.4",
  "description": "A custom Minecraft launcher",
  "author": {
    "name": "TutlaMC",
    "email": "ayaanibrahim1110@gmail.com"
  },
  "homepage": "https://tutla.net",
  "main": "electron/dist/main.js",
  "type": "module",
  "scripts": {
    "build:electron": "tsc -p electron && tsc -p electron/tsconfig.preload.json",
    "dev:electron": "npm run build:electron && cross-env NODE_ENV=dev electron ./electron/dist/main.js",
    "dev:react": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "build": "npm run build:react && npm run build:electron && electron-builder",
    "build:react": "cd frontend && npm run build && cd .."
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@types/node": "^20.19.11",
    "concurrently": "^8.0.0",
    "cross-env": "^10.0.0",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "minecraft-launcher-core": "^3.18.2",
    "mkdirp": "^3.0.1",
    "node-fetch": "^3.3.2",
    "tomate-loaders": "^2.0.2",
    "unzipper": "^0.12.3"
  },
  "build": {
    "appId": "com.tutla.trueclient",
    "productName": "TrueClient",
    "files": [
      "electron/dist/**/*",
      "frontend/dist/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Game",
      "maintainer": "TutlaMC ayaanibrahim1110@gmail.com",
      "icon": "build/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    }
  }
}
